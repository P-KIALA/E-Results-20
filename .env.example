# Copy this file to .env and fill values before deployment
# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1415xxxxxxx
TWILIO_STATUS_CALLBACK_URL=https://your-domain.example.com/api/webhook/twilio

# App
APP_BASE_URL=https://your-domain.example.com
NODE_ENV=production

# Optional: pull prebuilt image from GHCR instead of building on the server
# Set to 1 to use docker-compose.remote.yml which pulls ghcr.io/P-KIALA/E-Results-20:latest
USE_REMOTE_IMAGE=0

# GitHub repo (only used by deployment scripts if needed)
GITHUB_REPOSITORY=P-KIALA/E-Results-20
